# Managed by Ansible (roles/security/templates/sshd_config.j2)
# WARNING: Incorrect settings can lock you out. Always validate with sshd -t.

Port {{ sshd_port }}

PermitRootLogin {{ sshd_permit_root_login }}
PasswordAuthentication {{ sshd_password_authentication }}
PubkeyAuthentication {{ sshd_pubkey_authentication }}

X11Forwarding {{ sshd_x11_forwarding }}

MaxAuthTries {{ sshd_max_auth_tries }}
ClientAliveInterval {{ sshd_client_alive_interval }}
ClientAliveCountMax {{ sshd_client_alive_count_max }}

ChallengeResponseAuthentication no
UsePAM yes
PrintMotd no

Subsystem sftp /usr/libexec/openssh/sftp-server
